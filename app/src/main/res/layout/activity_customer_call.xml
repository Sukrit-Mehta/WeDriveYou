<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sukrit.wedriveyou.Activities.CustomerCall">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/toolbarCall"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMap"
        android:layout_below="@id/toolbarCall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/driver"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgMap"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:30 pm"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24km"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A-10, Jaypee Institute Of Information Techmology"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:gravity="center"
            android:maxLines="2"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnConfirmRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Ride"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"/>

</RelativeLayout>
